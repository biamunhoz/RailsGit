<h1>Usuários cadastrados</h1>

<table id="usuarios" class="table table-bordered display">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>CPF</th>
      <th>Telefone fixo</th>
      <th>Telefone celular</th>
      <th>Categoria</th>
      <th>Administrador?</th>
      <th></th>
      <th></th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>

        <td><%= usuario.nome %></td>
        <td><%= usuario.email %></td>
        <td><%= usuario.cpf %></td>
        <td><%= usuario.ddfixo %> <%= usuario.telfixo %></td>
        <td><%= usuario.ddcel %> <%= usuario.telcelular %></td>
        <td><%= usuario.admin == true ? 'Administrador' : 'Usuário comum' %></td>

        <td><%= link_to 'Sim', :controller => 'usuarios', :action => 'adm_sim', :id => usuario %> | <%= link_to 'Não', :controller => 'usuarios', :action => 'adm_nao', :id => usuario %></td>

        <td><%= link_to 'Mostrar', usuario, class:"btn btn-info active"  %></td>
        <td><%= link_to 'Editar', edit_usuario_path(usuario), class: "btn btn-primary active" %></td>
        <td><%= link_to 'Apagar', usuario, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger active" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>



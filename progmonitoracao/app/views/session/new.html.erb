
<%= form_for :session, :html => {:class => 'form-inline'}, url: login_path do |f| %>
    <left><h3> Login</h3></left>
    <left>
        <div class="form-group">
          <%= f.label :email, "E-mail" %>
          <%= f.text_field :email,  size: 45, class: 'form-control', placeholder: "Digite seu e-mail" %>
        </div>
    </left>
    <br>
    <br>
    <left>
        <div class="form-group">
          <%= f.label :password, "Senha" %>
          <%= f.password_field :password,  size: 45, class: 'form-control', placeholder: "Digite a senha" %>
        </div>
    </left>
    <br>
    <br>
    <left>
        <div class="actions">
          <%= f.submit "Entrar", class:"btn btn-primary active" %>
        </div>
    </left>
<% end %>

<left>
    <p> <%= link_to 'Cadastro', new_usuario_path, class: "btn btn-default" %> </p>
    <p> <%= link_to "Esqueci minha senha", new_senha_reset_path, class: "btn btn-default" %> </p>
</left>
<script type="text/javascript">
    $(function() {
        oTable = $('#dosimetros').dataTable({
            "iDisplayLength": 10,
            "sPaginationType":"full_numbers",
            "bJQueryUI":true,
            "aaSorting": [[0, "desc"]],
            "bLengthChange":false,
            "oLanguage":{
                "sInfo":                "Mostrando de _START_ até _END_ de _TOTAL_ registros",
                "sInfoFiltered":        "Filtrado de _MAX_ registros no total",
                "sZeroRecords":         "Sem resultados",
                "sInfoEmpty":           "",
                "sSearch":              "Buscar",
                "oPaginate": {
                    "sFirst":           "Primeiro",
                    "sPrevious":        "Anterior",
                    "sNext":            "Próximo",
                    "sLast":            "Ultimo"
                }
            }
        });
    });
</script>


<h1>Lista de Dosimetros</h1>

<table id="dosimetros" class="table table-bordered display">
  <thead>
    <tr>
      <th>Código</th>
      <th>Dosímetro relacionado com</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @dosimetros.each do |dosimetro| %>
      <tr>
        <td><%= dosimetro.nome %></td>

        <!--td>
            < % dosimetro.monitoracaos.each do |m| %>
                < %=  m.nome  %>
            < % end %>
        </td-->

        <td align="center"><%= dosimetro.monitoracao_id == nil ? "Vago" : dosimetro.monitoracao.nome %> </td>

        <td><%= link_to 'Mostrar', dosimetro, class:"btn btn-info active"  %></td>
        <td><%= link_to 'Editar', edit_dosimetro_path(dosimetro), class: "btn btn-primary active" %></td>
        <td><%= link_to 'Apagar', dosimetro, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger active" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Dosimetro', new_dosimetro_path, class: "btn btn-default" %>
